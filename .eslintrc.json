{
	"env": {
		"node": true,
		"es2021": true
	},
	"extends": ["eslint:recommended", "prettier"],
	"overrides": [],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"no-console": "warn",
		"quotes": ["error", "double"],
		"semi": ["error", "always"],
		"array-bracket-spacing": "error",
		"comma-dangle": [
			"error",
			{
				"arrays": "never",
				"objects": "never",
				"imports": "never",
				"exports": "never",
				"functions": "never"
			}
		],
		"no-else-return": "error",
		"arrow-spacing": "error",
		"no-unused-vars": "warn",
		"no-duplicate-imports": "error"
	}
}
